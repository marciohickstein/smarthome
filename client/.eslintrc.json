{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended"],
    "globals": {
        "angular": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", "tab"],
        "max-classes-per-file": ["error", 2],
        "no-tabs": 0,
        "no-console": "off",
        "no-underscore-dangle": "off"
    }
}
